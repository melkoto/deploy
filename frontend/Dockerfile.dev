# Используем официальный образ Node.js версии 14
FROM node:20

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /usr/src/app

# Копируем package.json и package-lock.json в рабочую директорию
COPY package*.json ./

# Устанавливаем зависимости приложения
RUN npm install

# Копируем все файлы в рабочую директорию контейнера
COPY . .

# Указываем, что приложение будет использовать порт 3000
EXPOSE 3000

# Запускаем приложение с использованием react-scripts для горячей перезагрузки
CMD ["npm", "run", "dev"]
